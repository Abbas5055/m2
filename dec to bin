#include <stdio.h>

#define MAX_BITS 32 // Maximum number of bits for binary representation

void decimalToBinary(int decimal) {
    char binary[MAX_BITS + 1] = {0}; // Array to store binary representation (including null terminator)
    int index = MAX_BITS - 1;

    // Convert decimal to binary
    while (decimal > 0) {
        binary[index--] = (decimal % 2) + '0'; // Store the least significant bit
        decimal /= 2; // Divide the number by 2
    }

    // Print binary representation
    printf("Binary: %s\n", binary + index + 1); // Skip leading zeros
}

int main() {
    int decimal;

    printf("Enter a decimal number: ");
    scanf("%d", &decimal); // Read decimal input

    decimalToBinary(decimal);

    return 0;
}
